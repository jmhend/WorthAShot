<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Theme.WAS" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/WASActionBar</item>
    </style>
    
    <style name="WASActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@drawable/wood_bg</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
    </style>
    
        <!-- Button Styles -->
    <style name="UTButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>     
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item> 
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>    
    </style>
    
    <style name="UTButton.LightGray">
        <item name="android:textColor">#222222</item>
        <item name="android:paddingTop">14dp</item>        
		<item name="android:paddingBottom">14dp</item>  
    </style>
    
    <style name="UTButton.DarkBlue">
        <item name="android:background">@drawable/ut_button_dark_blue_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">4dp</item>        
		<item name="android:paddingBottom">4dp</item> 
    </style>

</resources>